 [Unit]
 Description=GreenSense Irrigator MQTT Bridge Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/bin/sh -c "mkdir -p /usr/local/mqtt-bridge/; cd /usr/local/mqtt-bridge/; wget -O start-mqtt-bridge-from-github.sh https://raw.githubusercontent.com/GreenSense/Index/master/scripts/apps/BridgeArduinoSerialToMqttSplitCsv/start-mqtt-bridge-from-github.sh; sh start-mqtt-bridge-from-github.sh --DeviceName=irrigator1 --SerialPort=/dev/ttyUSB0 --SubscribeTopics=D,W,T,P,I,B,O,F,Q --SummaryKey=C"

 [Install]
 WantedBy=multi-user.target
