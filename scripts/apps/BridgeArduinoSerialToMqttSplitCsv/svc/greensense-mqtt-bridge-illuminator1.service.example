 [Unit]
 Description=GreenSense Illuminator MQTT Bridge Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/bin/sh -c "mkdir -p /usr/local/mqtt-bridge/; cd /usr/local/mqtt-bridge/; wget -O start-mqtt-bridge-from-github.sh https://raw.githubusercontent.com/GreenSense/Index/master/scripts/apps/BridgeArduinoSerialToMqttSplitCsv/start-mqtt-bridge-from-github.sh; sh start-mqtt-bridge-from-github.sh --DeviceName=illuminator1 --SerialPort=/dev/ttyUSB0 --SubscribeTopics=M,I,D,B,E,F,G,H,T --SummaryKey=C"

 [Install]
 WantedBy=multi-user.target
