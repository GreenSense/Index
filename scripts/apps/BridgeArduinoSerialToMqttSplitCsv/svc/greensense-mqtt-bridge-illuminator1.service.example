 [Unit]
 Description=GreenSense Illuminator MQTT Bridge Service
 After=multi-user.target

 [Service]
 Type=idle
 ExecStart=/bin/sh -c "mkdir -p /usr/local/mqtt-bridge/; cd /usr/local/mqtt-bridge/; sh start-mqtt-bridge.sh --DeviceName=illuminator1 --SerialPort=/dev/ttyUSB0 --SubscribeTopics=M,I,D,B,E,F,G,H,T,Q --SummaryKey=L"

 [Install]
 WantedBy=multi-user.target
